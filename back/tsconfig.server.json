{
    "compilerOptions": {
      "module": "commonjs",
      "strict": true,
     "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "lib": ["es6", "dom"],
      "strictNullChecks": true,
      "noImplicitAny": true,
      "target": "es6",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    }
}
